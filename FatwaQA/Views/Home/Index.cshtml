@{
    ViewData["Title"] = "Welcome to Fatwa Q&A";
}

<!-- Hero Section -->
<div class="gradient-bg py-5 mb-5" style="background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center text-white fade-in-up">
                <h1 class="display-3 fw-bold mb-3" style="line-height: 1.2;">
                    <i class="fas fa-book-quran"></i> Fatwa Q&A System
                </h1>
                <p class="lead mb-4 fs-5" style="font-weight: 300;">
                    Ask Islamic questions and receive expert guidance from knowledgeable scholars. 
                    Your questions matter, and we're here to help.
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="@Url.Action("Submit", "Questions")" class="btn btn-light btn-lg">
                        <i class="fas fa-pen-fancy me-2"></i>Ask a Question
                    </a>
                    <a href="@Url.Action("Answered", "Questions")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>Browse Answers
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Feature Cards -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);">
                        <i class="fas fa-check-circle fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">Easy to Use</h5>
                <p class="text-muted">Simple and straightforward question submission process that takes less than a minute.</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <i class="fas fa-star fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">Expert Answers</h5>
                <p class="text-muted">Receive answers from knowledgeable Islamic scholars with extensive experience.</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                        <i class="fas fa-shield-alt fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">Complete Privacy</h5>
                <p class="text-muted">Submit your questions anonymously with complete privacy and confidentiality.</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);">
                        <i class="fas fa-search fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">Searchable Database</h5>
                <p class="text-muted">Access a growing library of previously answered questions on various topics.</p>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5" style="color: #1e40af;">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #1e40af; color: white; font-size: 1.5rem; font-weight: bold;">
                        1
                    </div>
                    <h5 class="fw-bold">Ask Your Question</h5>
                    <p class="text-muted">Submit your Islamic question through our simple form with all the details needed.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #0ea5e9; color: white; font-size: 1.5rem; font-weight: bold;">
                        2
                    </div>
                    <h5 class="fw-bold">Our Team Reviews</h5>
                    <p class="text-muted">Our scholars carefully review your question and prepare a comprehensive answer.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #10b981; color: white; font-size: 1.5rem; font-weight: bold;">
                        3
                    </div>
                    <h5 class="fw-bold">Get Your Answer</h5>
                    <p class="text-muted">Your answer is published and available for you and others in our database.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container mb-5">
    <div class="card border-0 shadow-medium p-5" style="background: linear-gradient(135deg, rgba(30, 64, 175, 0.05) 0%, rgba(14, 165, 233, 0.05) 100%);">
        <div class="text-center">
            <h3 class="fw-bold mb-3">Ready to Get Started?</h3>
            <p class="text-muted mb-4">Have an Islamic question? Submit it now and our team will provide guidance.</p>
            <a href="@Url.Action("Submit", "Questions")" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>Submit Your Question Now
            </a>
        </div>
    </div>
</div>
