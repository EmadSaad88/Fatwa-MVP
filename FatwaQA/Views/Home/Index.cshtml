@using FatwaQA.Resources.Views.Home
@using IndexResource = FatwaQA.Resources.Views.Home.Index
@inject IStringLocalizer<SharedResource> SharedLocalizer
@inject IHtmlLocalizer<IndexResource> Localizer

@{
    ViewData["Title"] = Localizer["WelcomeToFatwaQA"];
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar", System.StringComparison.OrdinalIgnoreCase);
}

<!-- Hero Section -->
<div class="gradient-bg py-5 mb-5" style="background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center text-white fade-in-up">
                <h1 class="display-3 fw-bold mb-3" style="line-height: 1.2;">
                    <i class="fas fa-book-quran"></i> Fatwa Q&A System
                </h1>
                <p class="lead mb-4 fs-5" style="font-weight: 300;">
                    @Localizer["AskIslamicQuestions"]
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="@Url.Action("Submit", "Questions")" class="btn btn-light btn-lg">
                        <i class="fas fa-pen-fancy me-2"></i>@SharedLocalizer["AskQuestion"]
                    </a>
                    <a href="@Url.Action("Answered", "Questions")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>@SharedLocalizer["BrowseAnswers"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Feature Cards -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%);">
                        <i class="fas fa-check-circle fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">@Localizer["EasyToUse"]</h5>
                <p class="text-muted">@Localizer["SimpleAndStraightforward"]</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <i class="fas fa-star fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">@Localizer["ExpertAnswers"]</h5>
                <p class="text-muted">@Localizer["AnswersFromScholars"]</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                        <i class="fas fa-shield-alt fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">@Localizer["CompletePrivacy"]</h5>
                <p class="text-muted">@Localizer["SubmitAnonymously"]</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-soft text-center p-4">
                <div class="mb-3">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                         style="width: 70px; height: 70px; background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);">
                        <i class="fas fa-search fs-2" style="color: white;"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-2">@Localizer["SearchableDatabase"]</h5>
                <p class="text-muted">@Localizer["AccessGrowingLibrary"]</p>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5" style="color: #1e40af;">@Localizer["HowItWorks"]</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #1e40af; color: white; font-size: 1.5rem; font-weight: bold;">
                        1
                    </div>
                    <h5 class="fw-bold">@Localizer["AskYourQuestion"]</h5>
                    <p class="text-muted">@Localizer["SubmitYourQuestion"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #0ea5e9; color: white; font-size: 1.5rem; font-weight: bold;">
                        2
                    </div>
                    <h5 class="fw-bold">@Localizer["OurTeamReviews"]</h5>
                    <p class="text-muted">@Localizer["ScholarlyReview"]</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" 
                         style="width: 60px; height: 60px; background: #10b981; color: white; font-size: 1.5rem; font-weight: bold;">
                        3
                    </div>
                    <h5 class="fw-bold">@Localizer["GetYourAnswer"]</h5>
                    <p class="text-muted">@Localizer["AnswerPublished"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="container mb-5">
    <div class="card border-0 shadow-medium p-5" style="background: linear-gradient(135deg, rgba(30, 64, 175, 0.05) 0%, rgba(14, 165, 233, 0.05) 100%);">
        <div class="text-center">
            <h3 class="fw-bold mb-3">@Localizer["ReadyToGetStarted"]</h3>
            <p class="text-muted mb-4">@Localizer["SubmitNow"]</p>
            <a href="@Url.Action("Submit", "Questions")" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right me-2"></i>@Localizer["SubmitNow"]
            </a>
        </div>
    </div>
</div>
