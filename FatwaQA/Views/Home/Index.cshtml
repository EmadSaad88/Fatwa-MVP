@{
    ViewData["Title"] = "Welcome to Fatwa Q&A";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="jumbotron text-center py-5">
                <h1 class="display-4 mb-4">📖 Fatwa Q&A System</h1>
                <p class="lead mb-4">Ask Islamic questions and receive guidance from knowledgeable scholars.</p>
                
                <div class="row mt-5">
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Ask a Question</h5>
                                <p class="card-text">Submit your Islamic questions anonymously and receive guidance from our scholars.</p>
                                <a href="@Url.Action("Submit", "Questions")" class="btn btn-primary">Submit Question</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Browse Answers</h5>
                                <p class="card-text">Explore previously answered questions and find guidance on various Islamic topics.</p>
                                <a href="@Url.Action("Answered", "Questions")" class="btn btn-success">View Answers</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-primary">Easy</h3>
                            <p>Simple and straightforward question submission</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-success">Expert</h3>
                            <p>Answers from knowledgeable Islamic scholars</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-info">Anonymous</h3>
                            <p>Submit your questions with complete privacy</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <strong>Getting Started:</strong> Simply click "Ask a Question" to submit your question. Our team will review and provide an answer as soon as possible.
            </div>
        </div>
    </div>
</div>
