@inject IStringLocalizer<SharedResource> Localizer

@{
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar", System.StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="@currentCulture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fatwa Q&A</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FatwaQA.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-area="" asp-controller="Questions" asp-action="Answered">
                    <i class="fas fa-book-quran"></i> Fatwa Q&A
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Questions" asp-action="Submit">
                                <i class="fas fa-pen-fancy"></i> @Localizer["AskQuestion"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Questions" asp-action="Answered">
                                <i class="fas fa-list"></i> @Localizer["BrowseAnswers"]
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-globe"></i> @Localizer["Language"]
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                <li>
                                    <a class="dropdown-item @(!isArabic ? "active" : "")" 
                                       href="@Url.Action("SetLanguage", "Home", new { culture = "en", returnUrl = ViewContext.HttpContext.Request.Path })">
                                        <i class="fas fa-check me-2"></i>@Localizer["English"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(isArabic ? "active" : "")" 
                                       href="@Url.Action("SetLanguage", "Home", new { culture = "ar", returnUrl = ViewContext.HttpContext.Request.Path })">
                                        <i class="fas fa-check me-2"></i>@Localizer["Arabic"]
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Login">
                                <i class="fas fa-lock"></i> @Localizer["Admin"]
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="min-vh-100">
        @RenderBody()
    </main>

    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3"><i class="fas fa-book-quran"></i> Fatwa Q&A</h5>
                    <p class="text-white-50">A modern platform for Islamic knowledge and guidance. Ask questions and get answers from knowledgeable sources.</p>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Questions" asp-action="Submit" class="text-decoration-none"><i class="fas fa-arrow-right me-2"></i>Submit Question</a></li>
                        <li><a asp-controller="Questions" asp-action="Answered" class="text-decoration-none"><i class="fas fa-arrow-right me-2"></i>Browse Answers</a></li>
                        <li><a asp-controller="Admin" asp-action="Login" class="text-decoration-none"><i class="fas fa-arrow-right me-2"></i>Admin Panel</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">About</h5>
                    <p class="text-white-50 mb-0">
                        Fatwa Q&A is designed to provide quick and reliable Islamic guidance. 
                        <br><small>&copy; 2026 - All Rights Reserved</small>
                    </p>
                </div>
            </div>
            <hr class="my-4 bg-white-50">
            <div class="text-center text-white-50">
                <p class="mb-0">Built with <i class="fas fa-heart text-danger"></i> using ASP.NET Core & SQLite</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

