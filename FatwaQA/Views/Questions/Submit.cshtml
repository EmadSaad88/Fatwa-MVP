@model FatwaQA.Models.Question

@{
    ViewData["Title"] = "Submit a Question";
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="fw-bold mb-3" style="color: #1e40af;">
                    <i class="fas fa-pen-fancy me-2"></i>Ask Your Question
                </h1>
                <p class="text-muted lead">
                    Submit your Islamic question and our team of scholars will provide guidance.
                </p>
            </div>

            <div class="card border-0 shadow-medium">
                <div class="card-header" style="background: linear-gradient(90deg, #1e40af 0%, #0ea5e9 100%); border: none;">
                    <h5 class="mb-0 text-white" style="font-weight: 700;">
                        <i class="fas fa-file-alt me-2"></i>Question Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Submit" method="post" novalidate>
                        <!-- Question Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold">
                                Question Title 
                                <span style="color: var(--danger-color);">*</span>
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" 
                                   placeholder="e.g., Is it permissible to..." required 
                                   style="border: 2px solid #e2e8f0; border-radius: 8px; padding: 0.75rem;" />
                            <small class="form-text text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>Provide a clear, concise title for your question
                            </small>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Question Details -->
                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-bold">
                                Question Details 
                                <span style="color: var(--danger-color);">*</span>
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="8" 
                                      placeholder="Provide detailed information about your question. Include any relevant context or background..." required 
                                      style="border: 2px solid #e2e8f0; border-radius: 8px; padding: 0.75rem; font-family: 'Segoe UI', sans-serif;"></textarea>
                            <small class="form-text text-muted d-block mt-2">
                                <i class="fas fa-info-circle me-1"></i>More details help us provide better answers
                            </small>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-4">
                            <label asp-for="Category" class="form-label fw-bold">
                                Category 
                                <span style="color: var(--danger-color);">*</span>
                            </label>
                            <select asp-for="Category" class="form-select form-select-lg" required 
                                    style="border: 2px solid #e2e8f0; border-radius: 8px; padding: 0.75rem;">
                                <option value="">-- Select a Category --</option>
                                <option value="Islamic Law">üìú Islamic Law</option>
                                <option value="Daily Life">üè† Daily Life</option>
                                <option value="Family">üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Family</option>
                                <option value="Business">üíº Business</option>
                                <option value="Health">‚öïÔ∏è Health</option>
                                <option value="Other">‚ùì Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <hr class="my-4">

                        <!-- Contact Information -->
                        <h6 class="fw-bold mb-3" style="color: #1e40af;">Contact Information</h6>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="SubmitterName" class="form-label fw-bold">
                                        Your Name 
                                        <span style="color: var(--danger-color);">*</span>
                                    </label>
                                    <input asp-for="SubmitterName" class="form-control" 
                                           placeholder="Your full name" required 
                                           style="border: 2px solid #e2e8f0; border-radius: 8px; padding: 0.75rem;" />
                                    <span asp-validation-for="SubmitterName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="SubmitterEmail" class="form-label fw-bold">
                                        Email Address 
                                        <span style="color: var(--danger-color);">*</span>
                                    </label>
                                    <input asp-for="SubmitterEmail" class="form-control" type="email" 
                                           placeholder="your@email.com" required 
                                           style="border: 2px solid #e2e8f0; border-radius: 8px; padding: 0.75rem;" />
                                    <span asp-validation-for="SubmitterEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Info Alert -->
                        <div class="alert alert-info border-0 mb-4" role="alert" 
                             style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(14, 165, 233, 0.1) 100%); border-left: 5px solid #0891b2;">
                            <p class="mb-0">
                                <i class="fas fa-shield-alt me-2"></i>
                                <strong>Your Privacy:</strong> Your question will be reviewed by our scholars before being published. 
                                We keep your email private and only use it for updates on your question.
                            </p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 flex-wrap">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="fas fa-paper-plane me-2"></i>Submit Question
                            </button>
                            <a href="@Url.Action("Answered")" class="btn btn-outline-secondary btn-lg flex-grow-1">
                                <i class="fas fa-list me-2"></i>Browse Answers
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
