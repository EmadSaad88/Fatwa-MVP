@model FatwaQA.Models.Question
@using FatwaQA.Resources.Views.Questions
@using SubmitResource = FatwaQA.Resources.Views.Questions.Submit
@inject IHtmlLocalizer<SubmitResource> Localizer

@{
    ViewData["Title"] = Localizer["SubmitAQuestion"];
}

<div class="islamic-header">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-pen-fancy me-3"></i>@Localizer["SubmitAQuestion"]
            </h1>
            <p class="lead" style="font-weight: 300; letter-spacing: 0.5px;">
                @Localizer["SubmitYourQuestion"]
            </p>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="control-panel">
                <div class="control-panel-title">
                    <i class="fas fa-file-alt me-2"></i>@Localizer["QuestionDetails"]
                </div>

                <form asp-action="Submit" method="post" novalidate>
                    <!-- Question Title -->
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">
                            @Localizer["QuestionTitle"] <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg" 
                               placeholder="@Localizer["BriefTitleOfYourQuestion"]" required />
                        <small class="form-text text-muted d-block mt-2">
                            <i class="fas fa-info-circle me-1"></i>@Localizer["BriefTitleOfYourQuestion"]
                        </small>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- Question Details -->
                    <div class="mb-4">
                        <label asp-for="Content" class="form-label">
                            @Localizer["QuestionDetails"] <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Content" class="form-control" rows="8" 
                                  placeholder="@Localizer["ProvideDetails"]" required></textarea>
                        <small class="form-text text-muted d-block mt-2">
                            <i class="fas fa-info-circle me-1"></i>@Localizer["ProvideDetails"]
                        </small>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <!-- Category -->
                    <div class="mb-4">
                        <label asp-for="Category" class="form-label">
                            @Localizer["Category"] <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Category" class="form-select form-select-lg" required>
                            <option value="">@Localizer["SelectCategory"]</option>
                            <option value="Islamic Law">üìú @Localizer["IslamicLaw"]</option>
                            <option value="Daily Life">üè† @Localizer["DailyLife"]</option>
                            <option value="Family">üë®‚Äçüë©‚Äçüëß‚Äçüë¶ @Localizer["Family"]</option>
                            <option value="Business">üíº @Localizer["Business"]</option>
                            <option value="Health">‚öïÔ∏è @Localizer["Health"]</option>
                            <option value="Worship">üïå Worship</option>
                            <option value="Other">‚ùì @Localizer["Other"]</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="section-divider"></div>

                    <!-- Contact Information -->
                    <h6 class="fw-bold mb-4" style="color: var(--primary-color); text-transform: uppercase; letter-spacing: 1px;">
                        <i class="fas fa-user me-2"></i>@Localizer["ContactInformation"]
                    </h6>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="SubmitterName" class="form-label">
                                    @Localizer["YourName"] <span class="text-danger">*</span>
                                </label>
                                <input asp-for="SubmitterName" class="form-control" 
                                       placeholder="@Localizer["YourName"]" required />
                                <span asp-validation-for="SubmitterName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="SubmitterEmail" class="form-label">
                                    @Localizer["EmailAddress"] <span class="text-danger">*</span>
                                </label>
                                <input asp-for="SubmitterEmail" class="form-control" type="email" 
                                       placeholder="@Localizer["EmailAddress"]" required />
                                <span asp-validation-for="SubmitterEmail" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Islamic Info Alert -->
                    <div class="islamic-panel" style="border-left-color: #059669; margin: 2rem 0;">
                        <h6 style="color: #059669; margin-bottom: 1rem;">
                            <i class="fas fa-shield-alt me-2"></i>@Localizer["YourPrivacy"]
                        </h6>
                        <p class="mb-0" style="font-size: 0.95rem;">
                            @Localizer["YourPrivacy"]
                        </p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 flex-wrap pt-3">
                        <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                            <i class="fas fa-paper-plane me-2"></i>@Localizer["SubmitQuestion"]
                        </button>
                        <a href="@Url.Action("Answered")" class="btn btn-outline-secondary btn-lg flex-grow-1">
                            <i class="fas fa-list me-2"></i>@Localizer["BrowseAnswers"]
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
