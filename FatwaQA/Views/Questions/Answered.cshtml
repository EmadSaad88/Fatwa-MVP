@using FatwaQA.Resources.Views.Questions
@using AnsweredResource = FatwaQA.Resources.Views.Questions.Answered
@model IEnumerable<FatwaQA.Models.Question>
@inject IHtmlLocalizer<AnsweredResource> Localizer

@{
    ViewData["Title"] = Localizer["AnsweredQuestions"];
}

<div class="container py-5">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="fw-bold mb-3" style="color: #1e40af;">
                    <i class="fas fa-book-open me-2"></i>@Localizer["AnsweredQuestions"]
                </h1>
                <p class="text-muted lead">
                    @Localizer["BrowseAnsweredQuestions"]
                </p>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var question in Model)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-soft h-100 fade-in-up">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
                                <div>
                                    <h5 class="card-title fw-bold mb-2">
                                        <a href="@Url.Action("ViewAnswer", new { id = question.Id })" 
                                           class="text-decoration-none" style="color: #1e40af;">
                                            @question.Title
                                        </a>
                                    </h5>
                                    <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
                                        <span class="badge bg-success" style="background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%) !important;">
                                            <i class="fas fa-check-circle me-1"></i>@Localizer["Answered"]
                                        </span>
                                        <span class="badge bg-info">
                                            <i class="fas fa-tag me-1"></i>@question.Category
                                        </span>
                                        <span class="text-muted small">
                                            <i class="fas fa-calendar me-1"></i>@question.UpdatedDate?.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <p class="card-text text-muted mb-3">
                                @{
                                    var preview = question.Content.Length > 200 
                                        ? question.Content.Substring(0, 200) + "..." 
                                        : question.Content;
                                }
                                @preview
                            </p>

                            <div class="mt-3">
                                <a asp-action="ViewAnswer" asp-route-id="@question.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-arrow-right me-2"></i>@Localizer["ReadFullAnswer"]
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <p class="text-muted">
                <i class="fas fa-info-circle me-2"></i>Showing @Model.Count() answered question(s)
            </p>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="card border-0 shadow-soft p-5" style="background: linear-gradient(135deg, rgba(30, 64, 175, 0.05) 0%, rgba(14, 165, 233, 0.05) 100%);">
                    <div class="mb-4">
                        <i class="fas fa-inbox fs-1" style="color: #1e40af; opacity: 0.5;"></i>
                    </div>
                    <h4 class="fw-bold mb-3">No Answered Questions Yet</h4>
                    <p class="text-muted mb-4">
                        We're currently building our knowledge base. Be the first to submit a question!
                    </p>
                    <a asp-action="Submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-pen-fancy me-2"></i>Submit Your Question
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- CTA Section -->
    <div class="row mt-5">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-soft p-4" style="background: linear-gradient(135deg, rgba(30, 64, 175, 0.08) 0%, rgba(14, 165, 233, 0.08) 100%); border-left: 5px solid #1e40af;">
                <div class="d-flex align-items-center gap-3">
                    <div>
                        <i class="fas fa-lightbulb fs-3" style="color: #f59e0b;"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="fw-bold mb-1">Didn't find your answer?</h6>
                        <p class="text-muted mb-0">Submit your question and our team of scholars will provide expert guidance.</p>
                    </div>
                    <a asp-action="Submit" class="btn btn-primary btn-sm white-space-nowrap">Ask Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
