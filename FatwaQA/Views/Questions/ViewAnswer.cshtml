@model FatwaQA.Models.Question

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <!-- Back Button -->
            <a asp-action="Answered" class="btn btn-outline-secondary mb-4">
                <i class="fas fa-arrow-left me-2"></i>Back to Questions
            </a>

            <!-- Question Card -->
            <div class="card border-0 shadow-medium mb-4">
                <div class="card-header" style="background: linear-gradient(90deg, #1e40af 0%, #0ea5e9 100%); border: none;">
                    <h3 class="mb-0 text-white fw-bold">
                        <i class="fas fa-question-circle me-2"></i>@Model.Title
                    </h3>
                </div>
                <div class="card-body p-4">
                    <!-- Meta Information -->
                    <div class="d-flex flex-wrap gap-3 align-items-center mb-4 pb-3 border-bottom">
                        <span class="badge bg-info rounded-pill px-3 py-2">
                            <i class="fas fa-tag me-1"></i>@Model.Category
                        </span>
                        <span class="text-muted small">
                            <i class="fas fa-calendar me-2"></i>Answered @Model.UpdatedDate?.ToString("MMMM dd, yyyy")
                        </span>
                    </div>

                    <!-- Question Content -->
                    <div class="question-section p-4 rounded-3 mb-0">
                        <h6 class="fw-bold mb-3" style="color: #1e40af;">
                            <i class="fas fa-file-alt me-2"></i>Question Details
                        </h6>
                        <div class="question-text" style="color: #374151; line-height: 1.8;">
                            @Html.Raw(Model.Content.Replace(Environment.NewLine, "<br />"))
                        </div>
                    </div>
                </div>
            </div>

            <!-- Answer Card -->
            <div class="card border-0 shadow-medium mb-4">
                <div class="card-header" style="background: linear-gradient(90deg, #10b981 0%, #059669 100%); border: none;">
                    <h5 class="mb-0 text-white fw-bold">
                        <i class="fas fa-check-circle me-2"></i>Answer
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.Answer))
                    {
                        <div class="answer-text" style="color: #374151; line-height: 1.8; font-size: 1.05rem;">
                            @Html.Raw(Model.Answer.Replace(Environment.NewLine, "<br />"))
                        </div>

                        @if (Model.AnsweredBy != null)
                        {
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                         style="width: 50px; height: 50px; background: linear-gradient(135deg, #1e40af 0%, #0ea5e9 100%); color: white; font-weight: bold;">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1 fw-bold">@Model.AnsweredBy.FullName</h6>
                                        <p class="text-muted mb-0 small">
                                            <i class="fas fa-briefcase me-1"></i>@Model.AnsweredBy.Role
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning border-0 mb-0" role="alert">
                            <i class="fas fa-hourglass-half me-2"></i>
                            <strong>Answer pending:</strong> This question is being reviewed by our scholars. 
                            An answer will be provided soon.
                        </div>
                    }
                </div>
            </div>

            <!-- CTA Section -->
            <div class="row g-3">
                <div class="col-md-6">
                    <a asp-action="Answered" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-list me-2"></i>View More Questions
                    </a>
                </div>
                <div class="col-md-6">
                    <a asp-action="Submit" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-pen-fancy me-2"></i>Ask Another Question
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .question-section {
        background: linear-gradient(135deg, rgba(30, 64, 175, 0.05) 0%, rgba(14, 165, 233, 0.05) 100%);
        border-left: 5px solid #1e40af;
    }

    .question-text, .answer-text {
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
</style>
