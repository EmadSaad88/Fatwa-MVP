@model FatwaQA.Models.Question

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <a asp-action="Answered" class="btn btn-outline-secondary mb-3">‚Üê Back to Questions</a>
            
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h3 class="mb-0">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        <strong>Category:</strong> <span class="badge bg-info">@Model.Category</span>
                        | <strong>Answered:</strong> @Model.UpdatedDate?.ToString("MMMM dd, yyyy")
                    </p>
                    
                    <div class="question-section mb-4">
                        <h5 class="text-primary">Question</h5>
                        <p>@Html.Raw(Model.Content.Replace(Environment.NewLine, "<br />"))</p>
                    </div>
                </div>
            </div>

            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Answer</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Answer))
                    {
                        <p>@Html.Raw(Model.Answer.Replace(Environment.NewLine, "<br />"))</p>
                        @if (Model.AnsweredBy != null)
                        {
                            <hr />
                            <p class="text-muted">
                                <strong>Answered by:</strong> @Model.AnsweredBy.FullName<br />
                                <small>@Model.AnsweredBy.Role</small>
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No answer available yet.</p>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Answered" class="btn btn-primary">Back to Questions</a>
                <a asp-action="Submit" class="btn btn-outline-primary">Ask Another Question</a>
            </div>
        </div>
    </div>
</div>

<style>
    .question-section {
        padding: 15px;
        background-color: #f8f9fa;
        border-left: 4px solid #0d6efd;
        border-radius: 4px;
    }
</style>
