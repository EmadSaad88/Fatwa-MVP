@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = (dynamic)ViewData.Model;
}

<div class="container-fluid py-5">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-md-8">
            <h1 class="fw-bold" style="color: #1e40af;">
                <i class="fas fa-chart-line me-2"></i>Admin Dashboard
            </h1>
            <p class="text-muted">Manage questions, answers, and system settings</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle me-2"></i>Admin Menu
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-action="ChangePassword"><i class="fas fa-key me-2"></i>Change Password</a></li>
                    <li><a class="dropdown-item" asp-action="ManageUsers"><i class="fas fa-users me-2"></i>Manage Users</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item text-danger" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <!-- Total Questions -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-soft overflow-hidden">
                <div style="height: 4px; background: linear-gradient(90deg, #1e40af 0%, #0ea5e9 100%);"></div>
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, rgba(30, 64, 175, 0.1) 0%, rgba(14, 165, 233, 0.1) 100%);">
                            <i class="fas fa-question-circle fs-3" style="color: #1e40af;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">Total Questions</h6>
                    <h2 class="fw-bold" style="color: #1e40af;">@stats.TotalQuestions</h2>
                </div>
            </div>
        </div>

        <!-- Pending Questions -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-soft overflow-hidden">
                <div style="height: 4px; background: linear-gradient(90deg, #f59e0b 0%, #d97706 100%);"></div>
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.1) 100%);">
                            <i class="fas fa-hourglass-half fs-3" style="color: #f59e0b;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">Pending Review</h6>
                    <h2 class="fw-bold" style="color: #f59e0b;">@stats.PendingQuestions</h2>
                </div>
            </div>
        </div>

        <!-- Answered Questions -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-soft overflow-hidden">
                <div style="height: 4px; background: linear-gradient(90deg, #10b981 0%, #059669 100%);"></div>
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);">
                            <i class="fas fa-check-circle fs-3" style="color: #10b981;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">Answered</h6>
                    <h2 class="fw-bold" style="color: #10b981;">@stats.AnsweredQuestions</h2>
                </div>
            </div>
        </div>

        <!-- Published Questions -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-soft overflow-hidden">
                <div style="height: 4px; background: linear-gradient(90deg, #06b6d4 0%, #0891b2 100%);"></div>
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, rgba(6, 182, 212, 0.1) 0%, rgba(8, 145, 178, 0.1) 100%);">
                            <i class="fas fa-globe fs-3" style="color: #06b6d4;"></i>
                        </div>
                    </div>
                    <h6 class="text-muted mb-2">Published</h6>
                    <h2 class="fw-bold" style="color: #06b6d4;">@stats.PublishedQuestions</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-soft">
                <div class="card-header" style="background: linear-gradient(90deg, #1e40af 0%, #0ea5e9 100%); border: none;">
                    <h5 class="mb-0 text-white fw-bold">
                        <i class="fas fa-flash me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="ManageQuestions" asp-route-status="Pending" class="btn btn-outline-warning btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-inbox fs-5"></i>
                                <span>Review Pending</span>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="ManageQuestions" asp-route-status="Answered" class="btn btn-outline-success btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-check-double fs-5"></i>
                                <span>Published Answers</span>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="ManageUsers" class="btn btn-outline-info btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                                <i class="fas fa-users fs-5"></i>
                                <span>Manage Users</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
