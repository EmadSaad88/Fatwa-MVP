@model IEnumerable<FatwaQA.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Manage Users</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateUser" class="btn btn-primary">+ Create New User</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.Username</strong></td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-info">@user.Role</span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>@user.CreatedDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No users found. <a asp-action="CreateUser">Create the first user.</a>
        </div>
    }
</div>

<div class="mt-4">
    <a asp-action="Dashboard" class="btn btn-secondary">‚Üê Back to Dashboard</a>
</div>
